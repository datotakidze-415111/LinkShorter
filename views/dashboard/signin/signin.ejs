<body>
    <div class="sign_section">
        <div class="section-title">
            <h3>Log In and Start Sharing</h3>
            <p>Don't have an account? <a href="/signup" class="primary-a-irl">Sign up</a></p>
        </div>
        <div class="section-box">
            <%- include('../message/message.ejs') %>
            <form action="/signiner" method="POST">
                <div>
                    <label for="Email">Email Adress</label>
                    <input type="email" class="primary-input" name="email" placeholder="">
                </div>
                <div>
                    <label for="Password">Password</label>
                    <input type="password" class="primary-input" name="password" placeholder="">
                </div>
                <div>
                    <button type="submit" class="long-btn">Log in</button>
                </div>
            </form>
        </div>
    </div>
</body>